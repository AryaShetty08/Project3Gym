<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="421.0" prefWidth="299.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project3gym.GymManagerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="Main">
         <items>
           <MenuItem mnemonicParsing="false" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Classes">
         <items>
           <MenuItem mnemonicParsing="false" onAction="#onDisplayButtonClick" text="Display" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="About">
         <items>
           <MenuItem mnemonicParsing="false" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <Label text="Hello User what would you like to do today?" />

    <Label fx:id="tempText" />
   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
          <Button onAction="#onAddButtonClick" text="Add" />
         <Button mnemonicParsing="false" onAction="#onRemoveButtonClick" text="Remove" GridPane.columnIndex="1" />
         <Button mnemonicParsing="false" text="Check In" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" text="Check Out" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" text="Guest Check In" GridPane.rowIndex="2" />
         <Button mnemonicParsing="false" text="Guest Check Out" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      </children>
   </GridPane>
   <Button mnemonicParsing="false" onAction="#onQuitButtonClick" text="Quit" />
</VBox>
